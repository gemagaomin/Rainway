<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteBackgroundColor"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/item_point_testing_result_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="侧手i手机发拉到健身房阿斯兰的空间发来的快速反击拉萨的会计分录的会计分录的空间是否 螺丝扣搭街坊拉萨的肌肤"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_point_testing_result_point_done_num"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/lightColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_point_testing_result_point_card_num"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="未发牌" />

    </LinearLayout>

</LinearLayout>
